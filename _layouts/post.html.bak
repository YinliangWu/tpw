--- 
layout: default 
comments: true
--- 


<!-- Blog Post -->
<!-- Title -->
<h2>
  {{ page.title }} <div class="post-date"><span class="glyphicon glyphicon-time"></span> {{ page.date | date_to_string }} 
  
{% if site.leancloud.enable %}
  <span id="{{ page.url }}" class="leancloud_visitors" data-flag-title="{{ page.title }}">
  <span class="glyphicon glyphicon-eye-open"></span> <span class="leancloud-visitors-count"></span>
  </span>
{% endif %} 
</div>
  
  
</h2>

<!-- Author -->
<hr>
{{ content }}
<br/>

<div style="margin-top:10px;margin-bottom:10px">
  <ul class="pager"> 	
  {%if page.previous%}
    <li class="previous"> <a href="{{page.previous.url}}"> 上篇: {{page.previous.title}} </a> </li> 
 	{%endif%} 
  {%if page.next%}
   <li class="next">  <a href="{{page.next.url}}"> 下篇: {{page.next.title}}  </a>  </li>
  {%endif%} 
  </ul>
</div>

<hr>

<!-- Blog Comments -->
{% include includes-ct.html %} 

           
<!-- Blog Comments -->
{% include comments.html %}  
 
 
    
